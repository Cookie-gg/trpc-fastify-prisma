{
  "name": "trpc-fastify-prisma",
  "version": "1.0.0",
  "license": "MIT",
  "main": "src/main.ts",
  "private": true,
  "workspaces": [
    "playground"
  ],
  "scripts": {
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down -v",
    "prisma": "prisma generate && prisma migrate dev --name init",
    "dev": "rm -rf dist & dotenv -e .env -- tsc-watch --onCompilationComplete \"tsc-alias\" --onSuccess \"node dist/main.js\"",
    "env": "gen-env-types .env"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "8.2.1",
    "@fastify/jwt": "6.7.0",
    "@fastify/passport": "2.2.0",
    "@prisma/client": "4.11.0",
    "@trpc/server": "10.14.1",
    "bcrypt": "^5.1.0",
    "fastify": "4.14.1",
    "superjson": "1.12.2",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/node": "18.15.0",
    "dotenv-cli": "^7.1.0",
    "gen-env-types": "^1.3.4",
    "prisma": "4.11.0",
    "tsc-alias": "1.8.3",
    "tsc-watch": "6.0.0",
    "typescript": "4.9.5"
  }
}
